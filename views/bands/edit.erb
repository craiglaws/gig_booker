<div class="form">

<h2 class="lrg-head">Edit <%=@band.name%></h2>

<form class="form-group" action="/bands/<%=@band.id%>" method="post">
  <label for="name">Band Name: </label>
  <input type="text" name="name" value="<%=@band.name%>">

  <label for="genre">Genre: </label>
  <input type="text" name="genre" value="<%=@band.genre%>">

  <label for="bio">Bio: </label>
  <textarea name="bio" rows="8" cols="80" ><%=@band.bio%></textarea>

  <input class="btn" type="submit" value="Update Band">

</form>


<form action="/bands/<%=@band.id%>/delete" method="post">
  <input class="btn" type="submit" value="Delete Band">

</form>
</div>
