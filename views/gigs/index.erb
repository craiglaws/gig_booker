<div class="center">


<h2 class="lrg-head">Gigs</h2>
<br>


<table>
  <tr>
    <th>WHO</th>
    <th>WHERE</th>
    <th>WHEN</th>
  </tr>
  <% for gig in @next_gigs %>
  <tr>
    <td><%= gig.band.name %></td>
    <td><%= gig.venue.name %></td>
    <td><%= gig.date %></td>
  </tr>
  <% end %>
</table>

<div class="select">

<form class="select-group" action="/gigs/band" method="get">
  <label for="band">Select gigs by band</label><br>
  <select name="id">
    <% for band in @bands %>
    <option value="<%= band.id %>"><%= band.name %></option>
    <%end%>
  </select>
  <input class="btn" type="submit" name="" value="Go!">
</form>

<form class="select-group" action="/gigs/venue" method="get">
  <label for="venue">Select gigs by venue</label><br>
  <select name="id">
    <%for venue in @venues%>
    <option value="<%= venue.id %>"><%= venue.name %></option>
    <% end %>
  </select>
  <input class="btn" type="submit" name="" value="Go!">
</form>

</div>
<br>
<br>

<a class="btn" href="/gigs/new">Create a new gig</a>
<br>

<a class="btn" href="/gigs/show">See all gigs</a>

</div>
